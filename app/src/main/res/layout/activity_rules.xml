<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    android:orientation="vertical"
    android:weightSum="10"
    android:gravity="center">

    <ImageView
        android:id="@+id/rulesLogo"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_weight="2"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/rules" />

    <ScrollView
        android:id="@+id/scrollBar"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rulesLogo"
        android:layout_weight="7"
        android:background="@drawable/white_box_frame"
        android:padding="10dp"
        android:paddingBottom="20dp"
        tools:ignore="RtlCompat">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule2"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule3"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule4"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:text="@string/rule6"
                android:textSize="16sp" />



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/back_button_style"
        android:textSize="17sp"
        android:textColor="#ffffff"/>
</RelativeLayout>